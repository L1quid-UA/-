#include <stdio.h>
#include <windows.h>
#include <conio.h>

void time();

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    time();

    return 0;
}

void time()
{
    float t1, t2, t3;
    float res = 0;
    int check = 0;

    do{
        check = 0;
        printf("\nВведіть час, за котрий кожна людина з'їла свій пиріг: ");
        scanf("%f %f %f", &t1, &t2, &t3);
        if(t1 > 10000 || t2 > 10000 || t3 > 10000){
            check = 1;
            printf("\nЧас, за який людина з'їла пиріг має не перевищувати 10000\n");
        }
    } while (check == 1);

    res = 1.0 / (1.0 / t1 + 1.0 / t2 + 1.0 / t3);

    printf("\nЧас, необхідний для з'їдання пирога: %.2f", res);

    getch();
}
